<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/view_spacing_large">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/twitter_login_info"
        style="@style/TextView.Description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/twitter_login_profile_info" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/twitter_logged_user"
        style="@style/TextView.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/twitter_login_info"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/ic_twitter_blue_36dp"
        android:drawablePadding="@dimen/view_spacing_xlarge"
        android:paddingBottom="0dp"
        android:paddingLeft="@dimen/view_spacing_large"
        android:paddingRight="0dp"
        android:text="eyedol"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/twitter_logout"
        style="@style/TextView.Label"
        android:layout_width="wrap_content"
        android:layout_alignEnd="@+id/twitter_logged_user"
        android:layout_alignRight="@+id/twitter_logged_user"
        android:layout_below="@+id/twitter_logged_user"
        android:layout_gravity="center"
        android:padding="0dp"
        android:text="@string/logout"
        android:textColor="@color/color_accent" />
</RelativeLayout>