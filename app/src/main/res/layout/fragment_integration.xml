<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="@dimen/view_spacing_large"
    android:paddingLeft="@dimen/view_spacing_large"
    android:paddingRight="@dimen/view_spacing_large"
    android:paddingStart="@dimen/view_spacing_large"
    android:weightSum="1">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/start_service_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/view_spacing_xlarge"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/chk_enable_sms_sync"
        android:textStyle="bold"
        app:showText="false"
        app:switchPadding="@dimen/view_spacing_xlarge"
        app:switchTextAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/integration_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_spacing_xlarge"
        android:drawableLeft="@drawable/ic_twitter_blue_36dp"
        android:drawablePadding="@dimen/view_spacing_large"
        android:drawableStart="@drawable/ic_twitter_blue_36dp"
        android:gravity="center"
        android:text="@string/twitter"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/integration_web_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_spacing_xlarge"
        android:layout_weight="0.01"
        android:drawableLeft="@drawable/ic_web_grey_900_36dp"
        android:drawablePadding="@dimen/view_spacing_large"
        android:drawableStart="@drawable/ic_web_grey_900_36dp"
        android:gravity="center"
        android:text="@string/custom_web_service"
        android:textColor="@android:color/black" />
</LinearLayout>